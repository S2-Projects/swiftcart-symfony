{% extends 'base.html.twig' %}

{% block title %}Show product{% endblock %}

{% block body %}
    {% include 'home/categories.html.twig' %}
    <div class="p-4 sm:ml-64">
        <div class="flex items-center justify-center">
            <div class="bg-white shadow-lg rounded-lg p-8 w-full sm:max-w-md">
                <div class="flex items-center justify-center mb-4">
                    <img src="{{ asset('img/products/' ~ product.image) }}" alt="product image" class="w-32 h-32 mb-4">
                </div>
                <h2 class="text-2xl font-bold mb-4">{{ product.name }}</h2>
                <p class="text-gray-600 mb-4">{{ product.description }}</p>
                <p class="text-gray-700 text-lg font-medium mb-4"><strong>{{ product.price }} $</strong></p>
                <div class="flex justify-between">
                    {% if app.user and not is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('add_cart', {'id': product.id}) }}" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                        Add to Cart
                    </a>
                {% endif %}
                    <a href="{{ path('app_home') }}" class="text-blue-600 hover:underline">
                        Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
