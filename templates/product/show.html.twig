    {% extends 'base.html.twig' %}

    {% block title %}Show product{% endblock %}
    
    {% block body %}
        {% include 'dashboard/sidebar.html.twig' %}
        <div class="p-4 sm:ml-64">
            <div class="flex items-center justify-center">
                <div class="bg-white shadow-lg rounded-lg p-8 w-full sm:max-w-md">
                    <div class="flex items-center justify-center mb-4">
                    <img src="{{ asset('img/products/' ~ product.image) }}" alt="product image" class="w-32 h-32 mb-4">
                    </div>
                    <h2 class="text-2xl font-bold mb-4">{{ product.name }}</h2>
                    <p class="text-gray-600 mb-4">{{ product.description }}</p>
                    <p class="text-gray-700 text-lg font-medium mb-4">{{ product.price }}</p>
                    <div class="flex justify-between">
                        <a href="{{ path('admin_edit_product', {'id': product.id}) }}" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                            Update
                        </a>
                        <form action="{{ path('admin_delete_product', {'id': product.id}) }}" method="POST" onsubmit="return confirm('Are you sure you want to delete this product?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
    