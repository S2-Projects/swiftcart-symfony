{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
    {% include 'dashboard/sidebar.html.twig' %}
        <div class="sm:ml-64">   
        <div class="flex items-center justify-center">
            <div class="bg-white shadow-lg rounded-lg p-8 w-full sm:max-w-md">
                <form action="{{ path('admin_edit_product', {'id': product.id}) }}" method="POST" enctype="multipart/form-data">
                    {{ form_start(form) }}
                    <div class="mb-6">
                        <label for="image" class="block mb-2 text-sm font-medium text-gray-900">Image</label>
                        {{ form_widget(form.image, { 'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5'} }) }}
                        {% if form_errors(form.image) %}
                            <p class="text-red-500 text-xs">
                                {% for error in form_errors(form.image) %}
                                    {{ error.message }}
                                {% endfor %}
                            </p>
                        {% endif %}
                    </div>
                    <div class="mb-6">
                        <label for="name" class="block mb-2 text-sm font-medium text-gray-900">Name</label>
                        {{ form_widget(form.name, { 'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5'} }) }}
                        {% if form_errors(form.name) %}
                            <p class="text-red-500 text-xs">
                                {% for error in form_errors(form.name) %}
                                    {{ error.message }}
                                {% endfor %}
                            </p>
                        {% endif %}
                    </div>
                    <div class="mb-6">
                        <label for="description" class="block mb-2 text-sm font-medium text-gray-900">Description</label>
                        {{ form_widget(form.description, { 'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5'} }) }}
                        {% if form_errors(form.description) %}
                            <p class="text-red-500 text-xs">
                                {% for error in form_errors(form.description) %}
                                    {{ error.message }}
                                {% endfor %}
                            </p>
                        {% endif %}
                    </div>
                    <div class="mb-6">
                        <label for="price" class="block mb-2 text-sm font-medium text-gray-900">Price</label>
                        {{ form_widget(form.price, { 'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5', 'type': 'number', 'step': '0.01'} }) }}
                        {% if form_errors(form.price) %}
                            <p class="text-red-500 text-xs">
                                {% for error in form_errors(form.price) %}
                                    {{ error.message }}
                                {% endfor %}
                            </p>
                        {% endif %}
                    </div>
                    <div class="mb-6">
                        <label for="category" class="block mb-2 text-sm font-medium text-gray-900">Category</label>
                        {{ form_widget(form.category, { 'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5'} }) }}
                        {% if form_errors(form.category) %}
                            <p class="text-red-500 text-xs">
                                {% for error in form_errors(form.category) %}
                                    {{ error.message }}
                                {% endfor %}
                            </p>
                        {% endif %}
                    </div>
                    <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center">Update Product</button>
                    {{ form_end(form) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
